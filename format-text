Private Sub Worksheet_BeforeDoubleClick(ByVal Target As Range, Cancel As Boolean)
    Dim cell As Range
    Dim rng As Range
    Dim ws As Worksheet

    ' Define the range you want to monitor
    Set ws = ActiveSheet ' You can change this to a specific sheet if needed
    Set rng = ws.UsedRange ' Change this to your specific range

    ' Check if the double-clicked cell is within the monitored range
    If Not Intersect(Target, rng) Is Nothing Then
        ' Cancel the default double-click behavior (moving to the next cell)
        Cancel = True

        ' Disable events to prevent infinite loop
        Application.EnableEvents = False

        ' Check if the cell is not empty
        If Target.Value <> "" Then
            ' Convert text to uppercase
            Target.Value = UCase(Target.Value)

            ' Set font and font size
            Target.Font.Name = "Arial" ' Change to your desired font
            Target.Font.Size = 12 ' Change to your desired font size
        End If

        ' Enable events back
        Application.EnableEvents = True
    End If
End Sub
